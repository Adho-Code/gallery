pipeline {
  agent any
  tools {
    nodejs'Nodejs'
  }
  stages {
    stage('clone repo') {
      steps {
        echo 'cloning repo'
        git 'https://github.com/Adho-Code/gallery.git'
      }
    }
    
    stage('install dependancies') {
        steps {
            echo 'install dependancies'
            sh 'npm install'
      }
      }
     
    stage('test') {
        steps {
            echo 'running test'
            sh 'npm test'
      }
      }
  }
 
}





