pipeline {
    agent any
    tools {
        nodejs 'Nodejs' 
    }
    stages {
        stage('Clone repo') {
            steps {
                echo 'Cloning repo'
                git 'https://github.com/Adho-Code/gallery.git'
            }
        }
        stage('Install dependencies') {
            steps {
                echo 'Installing dependencies'
                sh 'npm install'
            }
        }

        steps {
                echo 'Running tests'
                sh 'npm test'
            }
        }
    }
