pipeline {
  agent any
  tools {
    nodejs 'NodeJS'
  }
//clone repo
  stages {
    stage('clone repo') {
      steps {
        echo 'cloning repo'
        git 'https://github.com/Adho-Code/gallery.git'
      }
    }
    //dependencies
      stage('install dependancies') {
      steps {
        echo 'install dependancies'
        sh 'npm install'
      }
      }
      //test
      stage('test') {
      steps {
        echo 'running test'
        sh 'npm test'
      }
      }

      // deployment

      stage('deploy'){
        steps {
            echo 'running deployment to heroku'
        }
      }
    
     
  }
 
}